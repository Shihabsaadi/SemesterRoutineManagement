
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainContent.cshtml";
}

<section class="content" ng-app="myApp" ng-controller="timeSpanCtrl">
    <div class="row">
        <div class="col-12">
            <div class="card card-blue">
                <div class="card-header">
                    <h3 class="card-title">TimeSpan List</h3>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th width="1%">Sl</th>
                                <th>Start</th>
                                <th>End</th>
                                <th>Sort</th>
                                <th width="1%">Status</th>
                                <th width="1%" class="text-center"><button data-toggle="modal" href="#timeSpan-modal" title="Create TimeSpan" class="btn btn-sm btn-primary" ng-click="onClick('Sync')"><i class="fa fa-plus-circle"></i></button></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in TimeSpanList">
                                <td>{{$index+1}}</td>
                                <td>
                                    {{item.StartTimeFormated}}
                                </td>
                                <td>
                                    {{item.EndTimeFormated}}
                                </td>
                                <td>
                                    {{item.Sort}}
                                <td>
                                    <label ng-show="item.Status==1" class="badge badge-success">Active</label>
                                    <label ng-show="item.Status!=1" class="badge badge-danger">In Active</label>
                                </td>
                                <td>
                                    <div class="btn-group">
                                       @* <a data-toggle="modal" href="#timeSpan-modal" title="Edit TimeSpan" class="btn btn-sm btn-primary" ng-click="onClick('EditTimeSpan',item)"><i class="fa fa-edit"></i></a>*@
                                        <a data-toggle="modal"  title="Delete" class="btn btn-sm btn-danger" ng-click="onClick('DeleteTimeSpan',item)"><i class="fa fa-trash"></i></a>
                                    </div>
                                </td>
                            </tr>

                    </table>
                </div>
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <div class="modal fade" id="timeSpan-modal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Create TimeSpan</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="card-body">
                            <div class="form-group">
                                <label class="col-sm-3 control-label">StartTime</label>
                                <div class="col-sm-9">
                                    <input ng-model="StartTime" type="time"  format="HH:mm" date-only="true" class="form-control" placeholder="StartTime">
                                </div>
                                <label class="col-sm-3 control-label">EndTime</label>
                                <div class="col-sm-9">
                                    <input ng-model="EndTime" type="time"  format="HH:mm" date-only="true" class="form-control" placeholder="EndTime">
                                </div>
                                <label class="col-sm-3 control-label">Sort</label>
                                <div class="col-sm-9">
                                    <input ng-model="Sort" type="number" min="1" class="form-control" placeholder="Sort">
                                </div>
                                <label class="col-sm-3 control-label">Active</label>
                                <div class="col-sm-9">
                                    <input ng-model="Status" type="checkbox">
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <!-- /.card-footer -->
                    </form>
                </div>
                <div class="modal-footer">
                    <button data-toggle="tooltip" title="Save" type="button" class="btn btn-success pull-right" data-dismiss="modal" ng-click="onClick('SaveTimeSpan')"><i class="fa fa-save"></i></button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</section>
@section Scripts
    {
    <script src="~/scripts/Angular/appModul.js"></script>
    <script src="~/scripts/Angular/TimeSpan/TimeSpanService.js"></script>
    <script src="~/scripts/Angular/TimeSpan/TimeSpanController.js"></script>
}


