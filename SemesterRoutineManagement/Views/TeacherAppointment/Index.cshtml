
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainContent.cshtml";
}

<section class="content" ng-app="myApp" ng-controller="teacherAppointmentCtrl">
    <div class="row">
        <div class="col-12">
            <div class="card card-blue">
                <div class="card-header">
                    <h3 class="card-title">Teacher Appointment List</h3>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th width="1%">Sl</th>
                                <th>Course</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th width="1%">Status</th>
                                <th width="1%" class="text-center"><button data-toggle="modal" href="#teacherAppointment-modal" title="Create Teacher Appointment" class="btn btn-sm btn-primary" ng-click="onClick('Sync')"><i class="fa fa-plus-circle"></i></button></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in teacherAppointmentList">
                                <td>{{$index+1}}</td>
                                <td>
                                    {{item.CourseName}}
                                </td>
                                <td>
                                    {{item.TeacherName}}
                                </td>
                                <td>
                                    {{item.TeacherEmail}}
                                </td>
                                <td>
                                    {{item.TeacherPhone}}
                                </td>
                                <td>
                                    <label ng-show="item.Status==1" class="badge badge-success">Active</label>
                                    <label ng-show="item.Status!=1" class="badge badge-danger">In Active</label>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a data-toggle="modal" href="#teacherAppointment-modal" title="Edit Teacher Appointment" class="btn btn-sm btn-primary" ng-click="onClick('EditTeacherAppointment',item)"><i class="fa fa-edit"></i></a>
                                    </div>
                                </td>
                            </tr>

                    </table>
                </div>
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <div class="modal fade" id="teacherAppointment-modal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Create Teacher Appointment</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="card-body">
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Course</label>
                                <div class="col-sm-12">
                                    <select class="form-control" ng-model="Course" ng-options="item.Id as item.Name for item in courseList">
                                    </select>
                                </div>
                                <label class="col-sm-3 control-label">Teacher</label>
                                <div class="col-sm-12">
                                    <select class="form-control" ng-model="Teacher" ng-options="item.Id as item.Name for item in teacherList">
                                    </select>
                                </div>

                                <label class="col-sm-3 control-label">Active</label>
                                <div class="col-sm-12">
                                    <input ng-model="Status" type="checkbox">
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <!-- /.card-footer -->
                    </form>
                </div>
                <div class="modal-footer">
                    <button data-toggle="tooltip" title="Save" type="button" class="btn btn-success pull-right" data-dismiss="modal" ng-click="onClick('SaveTeacherAppointment')"><i class="fa fa-save"></i></button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</section>
@section Scripts
    {
    <script src="~/scripts/Angular/appModul.js"></script>
    <script src="~/scripts/Angular/TeacherAppointment/TeacherAppointmentService.js"></script>
    <script src="~/scripts/Angular/TeacherAppointment/TeacherAppointmentController.js"></script>
}


